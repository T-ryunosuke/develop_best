<% content_for(:title, t('.title')) %>

<div class="container mx-auto mt-10">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% if @posts.present? %>
        <%= render @posts %>
      <% else %>
        <div class="mb-3">ハートがありません</div>
      <% end %>
    </div>
    <div class="mb-20 flex justify-center">
      <%= paginate @posts %>
    </div>
  </div>
</div>
