<% content_for(:title, t('.title')) %>

<div class="container mx-auto mt-0 md:mt-4" >
  <div class="flex justify-center">
    <div class="flex-grow max-w-64 md:max-w-md">
      <%= form_with model: @user do |form| %>
        <%= render 'shared/error_messages', object: form.object %>
        <div class="pt-6">
          <%= form.label :name, t(".name") %>
          <%= form.text_field :name, class: "input input-bordered input-xs w-full" %>
        </div>

        <div class="py-8">
          <%= form.label :email, t(".email") %>
          <%= form.text_field :email, class: "input input-bordered input-xs w-full" %>
        </div>

        <div class="pb-8">
          <%= form.label :password, t(".password") %>
          <%= form.text_field :password, class: "input input-bordered input-xs w-full form-control", id: "user_password" %>
        </div>

        <div class="pb-2 md:mb-8">
          <%= form.label :password_confirmation, t(".password_confirmation") %>
          <%= form.text_field :password_confirmation, class: "input input-bordered input-xs w-full" %>
        </div>

        <div class="text-center my-8">
          <%= form.submit t('.submit'), class: "btn btn-sm bg-primary-content w-1/4 font-thin md:font-semibold text-gray-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
