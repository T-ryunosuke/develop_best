<% content_for(:title, t('.title')) %>

<div class="container pt-3">
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <div class="mb-3">投稿がありません</div>
        <% end %>
      </div>
      <%= paginate @posts %>
    </div>
  </div>
</div>
