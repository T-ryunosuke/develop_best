<!DOCTYPE html>
<html class="bg-gray-100 h-scroll scroll-smooth">
  <head>
    <title><%= page_title(yield(:title)) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag('favicon.ico') %>
    <%= yield :head %>
    <!--<link rel="manifest" href="/manifest.json"> -->
    <!-- <link rel="icon" href="/icon.png" type="image/png"> -->
    <!-- <link rel="icon" href="/icon.svg" type="image/svg+xml"> -->
    <!-- <link rel="apple-touch-icon" href="/icon.png"> -->
    <% if @post %>
      <!-- OGP Meta Tags -->
      <meta property="og:site_name" content="best">
      <meta property="og:title" content="<%= @post.title %>">
      <meta property="og:description" content="「best」の投稿">
      <meta property="og:type" content="website">
      <meta property="og:url" content="<%= request.original_url %>">
      <meta property="og:image" content="<%= "#{request.base_url}/images/ogp.jpg?text=#{CGI.escape(@post.title)}" %>">
      <meta property="og:locale" content="ja-JP">

      <!-- Twitter Card Meta Tags -->
      <meta name="twitter:card" content="summary_large_image">
      <meta name="twitter:site" content="@dog_kira1215">
      <meta name="twitter:image" content="<%= "#{request.base_url}/images/ogp.jpg?text=#{CGI.escape(@post.title)}" %>">
    <% end %>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
    rel="stylesheet"/>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-DP5CNQ3MCK"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-DP5CNQ3MCK');
    </script>
  </head>


  <body class="flex flex-col min-h-screen">
    <header class="fixed top-0 left-0 w-full z-50">
      <% if logged_in? %>
        <%= render "shared/header" %>
      <% else %>
        <%= render "shared/before_login_header" %>
      <% end %>
      <%= render "shared/flash_message" %>
    </header>

    <% if logged_in? %>
      <aside class="z-40">
        <%= render "shared/sidebar" %>
      </aside>
    <% end %>

    <main class="flex flex-1 mt-20 h-screen">
      <%= yield  %>
    </main>

    <footer class="w-full z-50 hidden sm:block">
      <%= render "shared/footer" %>
    </footer>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/js/lightbox.min.js"></script>

    <script>
      $('#menu-toggle').click(function() {
        $('#side-menu').toggleClass('translate-x-0 -translate-x-full');
        $('#menu-icon').toggleClass('hidden');
        $('#close-icon').toggleClass('hidden');
      });

      $(document).ready(function() {
        const $imageInput = $('#post_images');

        if ($imageInput.length) {
          $imageInput.on('change', function(event) {
            const files = event.target.files;
            const $previewsContainer = $('#previews');
            $previewsContainer.empty();  // 既存のプレビューをクリア

            $.each(files, function(index, file) {
              const reader = new FileReader();
              const $previewImage = $('<img>', {
                class: 'mt-3 preview-image max-h-52'
              });

              reader.onload = function(e) {
                $previewImage.attr('src', e.target.result);
                $previewsContainer.append($previewImage);
              };

              reader.readAsDataURL(file);
            });
          });
        }
      });
    </script>

  </body>
</html>
