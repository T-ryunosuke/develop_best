<% content_for(:title, t('.title')) %>

<div class="container mx-auto mt-10" >
  <div class="flex justify-center">

      <div class="flex-grow max-w-64 md:max-w-sm">
        <%= form_with url: login_path do |f| %>
          <div class="py-8 md:mb-8">
            <%= f.label :email, t(".email"), class: "text-sm" %>
            <%= f.text_field :email, class: "border-b border-black/50 bg-transparent outline-none focus:bg-white focus:border-white focus:shadow-md transition duration-500 w-full px-1 rounded-none" %>
          </div>

          <div class="md:pb-14">
            <%= f.label :password, t(".password"), class: "text-sm" %>
            <%= f.text_field :password, class: "border-b border-black/50 bg-transparent outline-none focus:bg-white focus:border-white focus:shadow-md transition duration-500 w-full form-control px-1 rounded-none" %>
          </div>

          <div class="text-center pt-10 md:pt-6">
            <%= f.submit t('.login'), class: "border border-gray-400 bg-transeparent text-gray-900 w-1/3 md:w-1/4 font-thin cursor-pointer hover:text-white hover:bg-gray-400 hover:shadow-lg transition duration-500 rounded-none" %>
          </div>
        <% end %>
      </div>

  </div>
</div>
